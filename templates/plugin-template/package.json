{
  "name": "cas-plugin-template",
  "version": "1.0.0",
  "description": "Template for creating CAS plugins with externalized dependencies",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc && npm run copy-assets",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "package": "npm run build && npm run create-zip",
    "clean": "rm -rf dist",
    "copy-assets": "cp -r assets dist/ 2>/dev/null || true",
    "create-zip": "cd dist && zip -r ../plugin.zip . && cd .. && echo 'âœ… Plugin packaged as plugin.zip'"
  },
  "keywords": [
    "cas",
    "plugin",
    "template",
    "react",
    "typescript"
  ],
  "author": "CAS Platform Team",
  "license": "MIT",
  "files": [
    "dist",
    "plugin.json",
    "README.md"
  ],
  "dependencies": {
    "@cas/types": "^1.0.0",
    "@cas/ui-components": "^1.0.0",
    "@cas/core-api": "^1.0.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/jest": "^29.5.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/user-event": "^14.4.3",
    "typescript": "^5.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ],
    "moduleNameMapping": {
      "^@cas/(.*)$": "<rootDir>/../../../packages/$1/src"
    }
  }
}