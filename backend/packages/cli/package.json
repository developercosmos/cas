{
  "name": "@cas/cli",
  "version": "1.0.0",
  "description": "CAS Plugin CLI - Comprehensive tooling for plugin development, building, and packaging",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cas-cli": "dist/bin/cas-cli.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "cas",
    "cli",
    "plugin",
    "build",
    "scaffold",
    "package",
    "typescript",
    "react"
  ],
  "author": "CAS Platform Team",
  "license": "MIT",
  "files": [
    "dist",
    "templates/**/*",
    "README.md"
  ],
  "dependencies": {
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.0",
    "semver": "^7.6.0",
    "webpack": "^5.90.0",
    "webpack-bundle-analyzer": "^4.10.0",
    "esbuild": "^0.19.0",
    "rollup": "^4.9.0",
    "terser": "^5.27.0",
    "cssnano": "^6.0.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "archiver": "^6.0.0",
    "crypto": "^1.0.1",
    "json-schema": "^0.4.0",
    "ajv": "^8.12.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/fs-extra": "^11.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/semver": "^7.5.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/bin/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}