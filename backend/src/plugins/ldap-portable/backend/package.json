{
  "name": "@cas/plugin-ldap-auth",
  "version": "1.0.0",
  "description": "LDAP Authentication Plugin for CAS - Portable Distribution",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "package": "npm run build && npm pack",
    "migrate": "node --loader ts-node/esm scripts/migrate.ts",
    "migrate:rollback": "node --loader ts-node/esm scripts/rollback.ts"
  },
  "keywords": [
    "cas",
    "plugin",
    "ldap",
    "authentication",
    "directory",
    "active-directory",
    "portable"
  ],
  "author": "CAS Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/developercosmos/cas.git",
    "directory": "backend/src/plugins/ldap-portable"
  },
  "files": [
    "dist",
    "migrations",
    "README.md",
    "plugin.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@cas/core-api": "file:../../../../packages/core-api"
  },
  "peerDependencies": {
    "express": "^4.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "moduleNameMapper": {
      "^@cas/core-api$": "<rootDir>/../../packages/core-api/src"
    }
  },
  "cas": {
    "pluginId": "ldap-auth",
    "category": "authentication",
    "isSystem": true,
    "compatibility": {
      "casVersion": ">=1.0.0"
    }
  }
}
