const express = require('express');
const { v4: uuidv4 } = require('uuid');
const { authenticate } = require('../../../middleware/auth');
const UserAccessService = require('./services/UserAccessService');
const AuditService = require('./services/AuditService');

const router = express.Router();

// Middleware for authentication
router.use(authenticate);

/**
 * ROLE MANAGEMENT ENDPOINTS
 */

// List all roles
router.get('/roles', async (req, res) => {
  try {
    const { page = 1, limit = 20, search = '', isActive = true } = req.query;
    
    const result = await UserAccessService.getRoles({
      page: parseInt(page),
      limit: parseInt(limit),
      search,
      isActive: isActive === 'true'
    });
    
    await AuditService.logAction({
      userId: req.user.id,
      action: 'roles.list',
      entityType: 'role',
      success: true,
      ipAddress: req.ip,
      userAgent: req.get('User-Agent')
    });
    
    res.json({
      success: true,
      data: result.roles,
      pagination: result.pagination
    });
  } catch (error) {
    console.error('Error listing roles:', error);
    res.status(500).json({
      success: false,
      error: 'Failed to list roles'
    });
  }
});

// Create new role
router.post('/roles', async (req, res) => {
  try {
    const { name, description, level = 10, permissions = [] } = req.body;
    
    // Validation
    if (!name || !name.trim()) {
      return res.status(400).json({
        success: false,
        error: 'Role name is required'
      });
    }
    
    // Check admin permission
    const hasPermission = await UserAccessService.hasPermission(req.user.id, 'user_access.roles.create');
    if (!hasPermission) {
      await AuditService.logAction({
        userId: req.user.id,
        action: 'roles.create',
        entityType: 'role',
        success: false,
        errorMessage: 'Permission denied',
        ipAddress: req.ip,
        userAgent: req.get('User-Agent')
      });
      
      return res.status(403).json({
        success: false,
        error: 'Permission denied'
      });
    }
    
    const roleData = {
      name: name.trim(),
      description: description || '',
      level: parseInt(level),
      isActive: true,
      createdBy: req.user.id
    };
    
    const role = await UserAccessService.createRole(roleData);
    
    // Assign permissions if provided
    if (permissions && permissions.length > 0) {
      await UserAccessService.assignPermissionsToRole(role.id, permissions, req.user.id);
    }
    
    await AuditService.logAction({
      userId: req.user.id,
      action: 'roles.create',
      entityType: 'role',
      entityId: role.id,
      newValues: roleData,
      success: true,
      ipAddress: req.ip,
      userAgent: req.get('User-Agent')
    });
    
    res.status(201).json({
      success: true,
      data: role
    });
  } catch (error) {
    console.error('Error creating role:', error);
    res.status(500).json({
      success: false,
      error: 'Failed to create role'
    });
  }
});

// Update role
router.put('/roles/:id', async (req, res) => {
  try {
    const { id } = req.params;
    const { name, description, level, isActive, permissions } = req.body;
    
    // Check permission
    const hasPermission = await UserAccessService.hasPermission(req.user.id, 'user_access.roles.edit');
    if (!hasPermission) {
      return res.status(403).json({
        success: false,
        error: 'Permission denied'
      });
    }
    
    const existingRole = await UserAccessService.getRoleById(id);
    if (!existingRole) {
      return res.status(404).json({
        success: false,
        error: 'Role not found'
      });
    }
    
    // Prevent modification of system roles by non-admins
    if (existingRole.isSystem && !await UserAccessService.hasPermission(req.user.id, 'user_access.admin')) {
      return res.status(403).json({
        success: false,
        error: 'Cannot modify system roles'
      });
    }
    
    const updateData = {
      name: name || existingRole.name,
      description: description !== undefined ? description : existingRole.description,
      level: level !== undefined ? parseInt(level) : existingRole.level,
      isActive: isActive !== undefined ? isActive : existingRole.isActive,
      updatedBy: req.user.id
    };
    
    const role = await UserAccessService.updateRole(id, updateData);
    
    // Update permissions if provided
    if (permissions !== undefined) {
      await UserAccessService.updateRolePermissions(id, permissions, req.user.id);
    }
    
    await AuditService.logAction({
      userId: req.user.id,
      action: 'roles.edit',
      entityType: 'role',
      entityId: id,
      oldValues: existingRole,
      newValues: updateData,
      success: true,
      ipAddress: req.ip,
      userAgent: req.get('User-Agent')
    });
    
    res.json({
      success: true,
      data: role
    });
  } catch (error) {
    console.error('Error updating role:', error);
    res.status(500).json({
      success: false,
      error: 'Failed to update role'
    });
  }
});

// Delete role
router.delete('/roles/:id', async (req, res) => {
  try {
    const { id } = req.params;
    
    // Check permission
    const hasPermission = await UserAccessService.hasPermission(req.user.id, 'user_access.roles.delete');
    if (!hasPermission) {
      return res.status(403).json({
        success: false,
        error: 'Permission denied'
      });
    }
    
    const existingRole = await UserAccessService.getRoleById(id);
    if (!existingRole) {
      return res.status(404).json({
        success: false,
        error: 'Role not found'
      });
    }
    
    // Prevent deletion of system roles
    if (existingRole.isSystem) {
      return res.status(403).json({
        success: false,
        error: 'Cannot delete system roles'
      });
    }
    
    await UserAccessService.deleteRole(id);
    
    await AuditService.logAction({
      userId: req.user.id,
      action: 'roles.delete',
      entityType: 'role',
      entityId: id,
      oldValues: existingRole,
      success: true,
      ipAddress: req.ip,
      userAgent: req.get('User-Agent')
    });
    
    res.json({
      success: true,
      message: 'Role deleted successfully'
    });
  } catch (error) {
    console.error('Error deleting role:', error);
    res.status(500).json({
      success: false,
      error: 'Failed to delete role'
    });
  }
});

