});

// Assign role to user
router.post('/users/:id/roles', async (req, res) => {
  try {
    const { id } = req.params;
    const { roleId, reason, expiresAt } = req.body;
    
    // Check permission
    const hasPermission = await UserAccessService.hasPermission(req.user.id, 'user_access.roles.assign');
    if (!hasPermission) {
      return res.status(403).json({
        success: false,
        error: 'Permission denied'
      });
    }
    
    const assignmentData = {
      userId: id,
      roleId,
      assignedBy: req.user.id,
      reason: reason || '',
      expiresAt: expiresAt ? new Date(expiresAt) : null
    };
    
    const assignment = await UserAccessService.assignRoleToUser(assignmentData);
    
    await AuditService.logAction({
      userId: req.user.id,
      action: 'users.roles.assign',
      entityType: 'user_role',
      entityId: assignment.id,
      newValues: assignmentData,
      success: true,
      ipAddress: req.ip,
      userAgent: req.get('User-Agent')
    });
    
    res.status(201).json({
      success: true,
      data: assignment
    });
  } catch (error) {
    console.error('Error assigning role:', error);
    res.status(500).json({
      success: false,
      error: 'Failed to assign role'
    });
  }
});

