// Get user roles
router.get('/users/:id/roles', async (req, res) => {
  try {
    const { id } = req.params;
    
    // Check permission or self-access
    const isSelfAccess = req.user.id === id;
    const hasPermission = isSelfAccess || 
      await UserAccessService.hasPermission(req.user.id, 'user_access.users.manage');
    
