{
  "name": "cas-menu-navigation-plugin",
  "version": "1.0.0",
  "description": "Interactive menu navigation system with keyboard shortcuts and user access control",
  "main": "index.js",
  "type": "module",
  "keywords": [
    "cas",
    "plugin",
    "navigation",
    "menu",
    "ui",
    "accessibility",
    "keyboard",
    "search",
    "filter"
  ],
  "author": {
    "name": "CAS Development Team",
    "email": "dev@cas-platform.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cas-platform/menu-navigation-plugin.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "cas": ">=1.0.0"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "peerDependencies": {
    "@cas/core-api": "^1.0.0",
    "@cas/database": "^1.0.0"
  },
  "exports": {
    ".": "./index.js",
    "./types": "./types.d.ts",
    "./package.json": "./package.json"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "types.d.ts",
    "package.json",
    "README.md",
    "database/migrations",
    "frontend"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "export": "node scripts/export.js"
  },
  "cas": {
    "pluginId": "menu-navigation",
    "category": "user-interface",
    "isSystem": true,
    "apiVersion": "1.0.0",
    "compatibility": {
      "casVersion": ">=1.0.0",
      "nodeVersion": ">=18.0.0",
      "database": "postgresql>=12.0"
    },
    "features": [
      "keyboard-shortcuts",
      "search-filter",
      "permission-based-access",
      "responsive-design",
      "audit-trail"
    ],
    "permissions": [
      "navigation:view",
      "navigation:configure",
      "navigation:manage"
    ],
    "database": {
      "migrationPath": "database/migrations/20251129_create_navigation_tables.sql",
      "tables": [
        "navigation_modules",
        "navigation_config",
        "navigation_user_preferences",
        "navigation_modules_audit"
      ]
    },
    "frontend": {
      "components": [
        "NavigationManager",
        "NavigationModal"
      ],
      "services": [
        "NavigationService"
      ],
      "integration": {
        "header": true,
        "keyboard": true,
        "theme": true
      }
    },
    "export": {
      "includeDatabase": true,
      "includeConfig": true,
      "includeDocumentation": true,
      "includeFrontend": true
    }
  }
}
